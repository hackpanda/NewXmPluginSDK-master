<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/common_menu_list_bg" >

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/alertdialog_item_height"
        android:ellipsize="marquee"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/listitem_2_padding_left"
        android:paddingRight="@dimen/listitem_2_padding_right"
        android:singleLine="true"
        android:textColor="@color/class_b_to_white_color"
        android:textSize="@dimen/font_size_4" />

    <com.xiaomi.smarthome.common.ui.widget.SwitchButton
        android:id="@+id/slide_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:layout_marginRight="@dimen/listitem_2_padding_right" />

</FrameLayout>