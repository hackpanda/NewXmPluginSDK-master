<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/menu_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/dialog_muenu_bg"
    android:orientation="vertical"
    >


    <ImageView
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/std_tittlebar_main_device_back2" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@drawable/std_list_background_line" />

    <ListView
        android:id="@+id/select_dialog_listview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:cacheColorHint="@null"
        android:divider="@drawable/std_list_background_line"
        android:dividerHeight="2px"
        android:layoutAnimation="@null"
        android:overScrollMode="ifContentScrolls"
        android:scrollbars="vertical" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@drawable/std_list_background_line"
        android:layout_marginBottom="30dp"/>
</LinearLayout>