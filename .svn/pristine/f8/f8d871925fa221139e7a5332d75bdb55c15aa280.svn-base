<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
	android:background="@color/white"
    android:layout_height="@dimen/y48">
	
	<ImageView
		android:id="@+id/typeImg"
		android:layout_centerVertical="true"
		android:layout_marginLeft="@dimen/x21"
		android:layout_width="@dimen/x30"
		android:background="@drawable/icon_baojing"
		android:layout_height="@dimen/x30" />
	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_centerVertical="true"
		android:layout_toRightOf="@id/typeImg"
		android:layout_marginLeft="@dimen/x12"
		android:layout_marginRight="@dimen/x22"
		android:layout_height="wrap_content">

		<RelativeLayout
			android:id="@+id/titleRel"
			android:layout_width="match_parent"
			android:layout_height="@dimen/y16">
			<ImageView
				android:id="@+id/wdImg"
				android:layout_width="@dimen/x9"
				android:layout_centerVertical="true"
				android:background="@drawable/icon_weidu"
				android:layout_height="@dimen/x9" />
			<TextView
				android:id="@+id/titleTv"
				android:text="门锁电量过低"
				android:textColor="#000000"
				android:alpha="0.8"
				android:textSize="@dimen/x13"
				android:layout_alignParentTop="true"
				android:layout_toRightOf="@id/wdImg"
				android:layout_marginLeft="@dimen/x5"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" />
			<TextView
				android:id="@+id/timeTv"
				android:text="12:10:10"
				android:textColor="#000000"
				android:alpha="0.5"
				android:textSize="@dimen/x11"
				android:layout_alignParentRight="true"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" />
		</RelativeLayout>
		<TextView
			android:id="@+id/contentTv"
			android:layout_below="@id/titleRel"
			android:text="当前您的门锁电量低于8%，请及时更换电池。"
			android:textColor="#000000"
			android:alpha="0.5"
			android:textSize="@dimen/x11"
			android:layout_alignParentLeft="true"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />
		
	</RelativeLayout>

</RelativeLayout>
