<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <style name="xmRouterBaseTheme" parent="android:Theme.NoTitleBar">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="XQProgressDialogSimple">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item> <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">true</item> <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item> <!-- 模糊 -->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimAmount">0</item>
    </style>

    <!-- V5的对话框 -->
    <style name="V5" />

    <style name="V5.AlertDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:fullDark">@android:color/transparent</item>
        <item name="android:topDark">@android:color/transparent</item>
        <item name="android:centerDark">@android:color/transparent</item>
        <item name="android:bottomDark">@android:color/transparent</item>
        <item name="android:fullBright">@android:color/transparent</item>
        <item name="android:topBright">@android:color/transparent</item>
        <item name="android:centerBright">@android:color/transparent</item>
        <item name="android:bottomBright">@android:color/transparent</item>
        <item name="android:bottomMedium">@android:color/transparent</item>
        <item name="android:centerMedium">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowAnimationStyle">@style/V5.Animation.Dialog</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="V5.AlertDialogActivity" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    
    <style name="V5.MenuDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:fullDark">@android:color/transparent</item>
        <item name="android:topDark">@android:color/transparent</item>
        <item name="android:centerDark">@android:color/transparent</item>
        <item name="android:bottomDark">@android:color/transparent</item>
        <item name="android:fullBright">@android:color/transparent</item>
        <item name="android:topBright">@android:color/transparent</item>
        <item name="android:centerBright">@android:color/transparent</item>
        <item name="android:bottomBright">@android:color/transparent</item>
        <item name="android:bottomMedium">@android:color/transparent</item>
        <item name="android:centerMedium">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="V5.Animation" />

    <style name="V5.Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/v5_dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/v5_dialog_exit</item>
    </style>

    <style name="circle_progressbar_large">
        <item name="android:indeterminateOnly">true</item>
        <item name="android:indeterminateDrawable">@drawable/circle_progressbar_indeterminate_drawable</item>
        <item name="android:indeterminateBehavior">repeat</item>
        <item name="android:indeterminateDuration">5000</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="circle_progressbar_large_locked">
        <item name="android:indeterminateOnly">true</item>
        <item name="android:indeterminateDrawable">@drawable/circle_progressbar_indeterminate_drawable_locked</item>
        <item name="android:indeterminateBehavior">repeat</item>
        <item name="android:indeterminateDuration">5000</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="block_progressbar_large">
        <item name="android:indeterminateOnly">true</item>
        <item name="android:indeterminateBehavior">repeat</item>
        <item name="android:indeterminateDuration">5000</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="page_circle_loading_progress">
        <item name="android:indeterminateOnly">true</item>
        <item name="android:indeterminateDrawable">@drawable/page_circle_loading_progress</item>
        <item name="android:indeterminateBehavior">repeat</item>
        <item name="android:indeterminateDuration">5000</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="TextAppearance" parent="@android:style/TextAppearance">
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1.0</item>
    </style>

    <style name="TextAppearance.Title">
        <item name="android:textColor">@color/primary_text_inverse</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="TextAppearance.Title.Bar">
        <item name="android:textColor">#6c6c6c</item>
        <item name="android:shadowColor">#6c6c6c</item>
        <item name="android:shadowDy">0.0</item>
        <item name="android:shadowRadius">0.0</item>
    </style>

    <style name="TextAppearance.EditText">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="TextAppearance.Button">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:height">52dp</item>
    </style>

    <style name="TextAppearance.TabPageIndicator" parent="Widget">
        <item name="android:textColor">@color/indicator_text</item>
    </style>

    <style name="Widget"></style>

    <style name="Widget.TabPageIndicator" parent="Widget">
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">22dip</item>
        <item name="android:paddingRight">22dip</item>
        <item name="android:paddingTop">11dip</item>
        <item name="android:textAppearance">@style/TextAppearance.TabPageIndicator</item>
        <item name="android:textSize">13sp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="Widget.ListView">
        <item name="android:cacheColorHint">@null</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:fastScrollEnabled">false</item>
        <item name="android:divider">@null</item>
        <item name="android:listSelector">@android:color/transparent</item>
        <item name="android:fadingEdge">@null</item>
        <item name="android:scrollingCache">false</item>
        <item name="android:padding">10dp</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <style name="Widget.EditText" parent="android:style/Widget.EditText">
        <item name="android:textAppearance">@style/TextAppearance.EditText</item>
        <item name="android:background">@drawable/search_input_bg</item>
        <item name="android:padding">12.5dp</item>
        <item name="android:textColorHint">#cacccd</item>
    </style>

    <style name="Widget.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">52dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">@style/TextAppearance.Button</item>
        <item name="android:background">@drawable/btn_secondary_bg</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="Widget.ProgressBar">
        <item name="android:indeterminateDrawable">@drawable/progress_bar_ani_normal</item>
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateDuration">1000</item>
        <item name="android:indeterminateOnly">true</item>
        <item name="android:minWidth">20dip</item>
        <item name="android:maxWidth">20dip</item>
        <item name="android:minHeight">20dip</item>
        <item name="android:maxHeight">20dip</item>
    </style>


</resources>