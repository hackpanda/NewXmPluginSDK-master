<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2889fd"
    android:orientation="vertical"
    tools:context=".main.MainActivity">
    <include layout="@layout/title_bar_transparent_white" />
    <LinearLayout
        android:background="#eeeeee"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_height="@dimen/y278">
            <ImageView
                android:layout_width="@dimen/x75"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/y50"
                android:background="@drawable/tupian"
                android:layout_height="@dimen/y125" />
            <TextView
                android:gravity="center_horizontal"
                android:text="授权我家门锁，您可以和家人一起使用啦!"
                android:textColor="#2889fd"
                android:textSize="@dimen/x12"
                android:layout_marginTop="@dimen/y30"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <EditText
            android:id="@+id/serachEdit"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/y31"
            android:background="@drawable/corners_edit"
            android:paddingStart="@dimen/x11"
            android:textColorHint="#000000"
            android:textSize="@dimen/x10"
            android:paddingLeft="@dimen/x11"
            android:maxLength="8"
            android:hint="邮箱／手机毫秒／小米账号"
            android:alpha="0.3"
            android:layout_width="@dimen/x278"
            android:layout_height="@dimen/y24" />

        <TextView
            android:gravity="center_horizontal"
            android:text="未找到该用户"
            android:alpha="0.8"
            android:textColor="#ff0000"
            android:textSize="@dimen/x13"
            android:layout_marginTop="@dimen/y8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/searchBtn"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/auth_search_selector"
            android:layout_marginTop="@dimen/y17"
            android:layout_width="@dimen/x279"
            android:layout_height="@dimen/y25" />
    </LinearLayout>


</LinearLayout>