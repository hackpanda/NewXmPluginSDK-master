<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2889fd"
    android:orientation="vertical"
    tools:context=".main.MainActivity">
    <include layout="@layout/title_bar_transparent_white" />

    <LinearLayout
        android:background="#eeeeee"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/y78"
                android:background="@drawable/shuaxintiao_2"
                android:layout_width="@dimen/x52"
                android:layout_height="@dimen/x52" />
            <TextView
                android:layout_marginTop="@dimen/y17"
                android:textColor="#2889fd"
                android:textSize="@dimen/x13"
                android:text="正在刷新"
                android:layout_marginBottom="@dimen/y78"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y29">
            <TextView
                android:text="扫描到的门锁"
                android:textColor="#000000"
                android:alpha="0.6"
                android:textSize="@dimen/x11"
                android:layout_marginLeft="@dimen/x21"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ListView
                android:id="@+id/gwListView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </ListView>
        </LinearLayout>


        <RelativeLayout
            android:background="@color/white"
            android:layout_marginTop="@dimen/y38"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_marginBottom="@dimen/y38"
            android:layout_height="@dimen/y38">
            <TextView
                android:text="刷新"
                android:textSize="@dimen/x13"
                android:textColor="#2889fd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
