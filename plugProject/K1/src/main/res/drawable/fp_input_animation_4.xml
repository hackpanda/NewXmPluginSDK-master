    xmlns:android="http://schemas.android.com/apk/res/android"
    android:oneshot="true">
    <item android:drawable="@drawable/fp_input_4_1" android:duration="10"></item>
    <item android:drawable="@drawable/fp_input_4_2" android:duration="10"></item>
    <item android:drawable="@drawable/fp_input_4_3" android:duration="10"></item>
    <item android:drawable="@drawable/fp_input_4_4" android:duration="10"></item>
    <item android:drawable="@drawable/fp_input_4_5" android:duration="10"></item>
    <item android:drawable="@drawable/fp_input_4_6" android:duration="10"></item>
    <item android:drawable="@drawable/fp_input_4_7" android:duration="10"></item>
    <item android:drawable="@drawable/fp_input_4_8" android:duration="10"></item>
    <item android:drawable="@drawable/fp_input_4_9" android:duration="10"></item>
    <item android:drawable="@drawable/fp_input_4_10" android:duration="10"></item>
    <item android:drawable="@drawable/fp_input_4_11" android:duration="10"></item>
    <item android:drawable="@drawable/fp_input_4_12" android:duration="10"></item>

</animation-list>
