<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2889fd"
    android:orientation="vertical" >

    <include layout="@layout/title_bar_transparent_white" />
    <LinearLayout
        android:background="#eeeeee"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y278">
            <com.xiaomi.zkplug.view.XCRoundImageView
                android:id="@+id/userImg"
                android:layout_width="@dimen/x64"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/y60"
                android:background="@drawable/icon_wo"
                android:layout_height="@dimen/x64" />
            <TextView
                android:id="@+id/nickNameTv"
                android:gravity="center_horizontal"
                android:text="二月花"
                android:textColor="#000000"
                android:alpha="0.6"
                android:textSize="@dimen/x13"
                android:layout_marginTop="@dimen/y17"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:id="@+id/detailLayout"
                android:layout_gravity="bottom"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/keyPeriodRel"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:background="@drawable/item_selector"
                    android:layout_height="@dimen/y38">
                    <TextView
                        android:id="@+id/validTitle"
                        android:text="钥匙有效期"
                        android:layout_marginLeft="@dimen/x20"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/x13"
                        android:textColor="#000000"
                        android:alpha="0.6"
                        android:layout_width="@dimen/x100"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/keyValidPeriodTv"
                        android:text=""
                        android:layout_marginRight="@dimen/x20"
                        android:layout_marginLeft="@dimen/x100"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/x11"
                        android:textColor="#000000"
                        android:alpha="0.4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>
                <View
                    android:id="@+id/dividerOne"
                    android:layout_above="@id/keyPeriodRel"
                    android:layout_centerHorizontal="true"
                    android:background="#c6c6c6"
                    android:alpha="0.4"
                    android:layout_width="@dimen/x279"
                    android:layout_height="@dimen/y1" />
                <RelativeLayout
                    android:id="@+id/recMsgRel"
                    android:layout_above="@id/dividerOne"
                    android:layout_width="match_parent"
                    android:background="@drawable/item_selector"
                    android:layout_height="@dimen/y38">
                    <TextView
                        android:text="推送通知"
                        android:layout_marginLeft="@dimen/x20"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/x13"
                        android:textColor="#000000"
                        android:alpha="0.6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/recMsgTv"
                        android:text="接收"
                        android:layout_marginRight="@dimen/x20"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/x11"
                        android:textColor="#000000"
                        android:alpha="0.4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>
                <View
                    android:layout_above="@id/recMsgRel"
                    android:layout_centerHorizontal="true"
                    android:background="#c6c6c6"
                    android:alpha="0.4"
                    android:layout_width="@dimen/x279"
                    android:layout_height="@dimen/y1" />

            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/authRemoveBtn"
            android:background="@drawable/item_selector"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/y83"
            android:layout_height="@dimen/y38">
            <TextView
                android:text="删除手机钥匙"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/x20"
                android:textSize="@dimen/x13"
                android:textColor="@color/warn_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>
    </LinearLayout>


</LinearLayout>