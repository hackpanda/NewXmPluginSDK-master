<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2889fd"
    android:orientation="vertical">
    <include layout="@layout/title_bar_transparent_white" />
    <LinearLayout
        android:id="@+id/fpTipLayout"
        android:background="#eeeeee"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_gravity="center_horizontal"
            android:text="@string/fp_input_tips"
            android:alpha="0.8"
            android:textColor="#000000"
            android:textSize="@dimen/x12"
            android:layout_marginTop="@dimen/y40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_gravity="center_horizontal"
            android:text="最舒适的姿势，将手指按在门锁指纹头上，听"
            android:alpha="0.8"
            android:textColor="#000000"
            android:textSize="@dimen/x12"
            android:layout_marginTop="@dimen/y9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_gravity="center_horizontal"
            android:text="@string/fp_input_tips_1"
            android:alpha="0.8"
            android:textColor="#000000"
            android:textSize="@dimen/x12"
            android:layout_marginTop="@dimen/y9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_gravity="center_horizontal"
            android:src="@drawable/fp_tu"
            android:layout_marginTop="@dimen/y88"
            android:layout_width="@dimen/x213"
            android:layout_height="@dimen/y108"/>
        <Button
            android:id="@+id/btnFpIput"
            android:layout_width="@dimen/x279"
            android:layout_height="@dimen/y33"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/y86"
            android:text="开始添加"
            android:background="@drawable/corners_btn"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/fpInputBuzhouLayout"
        android:visibility="gone"
        android:background="#eeeeee"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_marginTop="@dimen/y46"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/fpPutTv"
                android:layout_gravity="center_horizontal"
                android:text="放置手指"
                android:textColor="#2889fd"
                android:textSize="@dimen/x23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/fpCompleteTv"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/y11"
                android:text="将手指按在指纹头上再抬起，重复此步骤"
                android:alpha="0.6"
                android:textColor="#000000"
                android:textSize="@dimen/x14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <ImageView
            android:id="@+id/fpImg"
            android:src="@drawable/fp_input_animation_1"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/y88"
            android:layout_width="@dimen/x154"
            android:layout_height="@dimen/y202"/>
    </LinearLayout>
</LinearLayout>