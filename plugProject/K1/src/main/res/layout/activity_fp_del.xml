<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2889fd"
    android:orientation="vertical"
    tools:context=".main.MainActivity">
    <include layout="@layout/title_bar_transparent_white" />
    <RelativeLayout
        android:background="#eeeeee"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/content"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/fpNameRel"
                android:layout_width="match_parent"
                android:background="@drawable/item_selector"
                android:layout_height="@dimen/y38">
                <TextView
                    android:text="@string/fp_name_text"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/x20"
                    android:textSize="@dimen/x13"
                    android:textColor="#000000"
                    android:alpha="0.8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/nameEntryImg"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/x21"
                    android:layout_alignParentRight="true"
                    android:layout_width="@dimen/x6"
                    android:background="@drawable/icon_xiayiceng"
                    android:layout_height="@dimen/y10" />
                <TextView
                    android:id="@+id/fpNameTv"
                    android:text=""
                    android:gravity="right"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/x12"
                    android:textSize="@dimen/x13"
                    android:textColor="#000000"
                    android:alpha="0.4"
                    android:layout_toLeftOf="@id/nameEntryImg"
                    android:layout_width="@dimen/x208"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <RelativeLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="wrap_content">
                <View
                    android:layout_centerHorizontal="true"
                    android:background="#c6c6c6"
                    android:alpha="0.6"
                    android:layout_width="@dimen/x279"
                    android:layout_height="@dimen/y1" />
            </RelativeLayout>

            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/policeFp"
                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y91">
                <RelativeLayout
                    android:id="@+id/switchRel"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y38">
                    <TextView
                        android:textSize="@dimen/x13"
                        android:textColor="#000000"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/x20"
                        android:text="报警指纹"
                        android:layout_marginTop="@dimen/y13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <com.xiaomi.smarthome.common.ui.widget.SwitchButton
                        android:id="@+id/btnSwitch"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/x21"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/fpDangerTv"
                    android:background="@color/white"
                    android:layout_marginLeft="@dimen/x20"
                    android:layout_below="@id/switchRel"
                    android:text="@string/fp_danger"
                    android:textColor="#000000"
                    android:alpha="0.6"
                    android:textSize="@dimen/x12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/btnFpDel"
            android:background="@drawable/item_selector"
            android:layout_width="match_parent"
            android:layout_below="@id/content"
            android:gravity="center"
            android:layout_marginTop="@dimen/y313"
            android:layout_height="@dimen/y38">
            <TextView
                android:text="@string/fp_del_text"
                android:textSize="@dimen/x13"
                android:textColor="#e83434"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>